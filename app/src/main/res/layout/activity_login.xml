<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    ><RelativeLayout
      android:layout_margin="70dp"
      android:layout_centerInParent="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

    <TextView
        android:layout_marginBottom="20dp"
        android:id="@+id/textview_loginqq"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="登录韩剧TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="20dp"
        android:id="@+id/textview_call"
        android:layout_below="@id/textview_loginqq"
        android:text="您可以使用以下方式登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/button_cancel"
        android:layout_alignParentRight="true"
        android:background="@mipmap/delete_btn"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <Button
        android:layout_marginBottom="20dp"
        android:layout_alignRight="@id/button_cancel"
        android:layout_alignLeft="@id/textview_call"
        android:layout_below="@id/textview_call"
        android:id="@+id/button_qqlogin"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:drawableLeft="@mipmap/ic_qq"
        android:textColor="#ffffff"
        android:text="用QQ账号登录"
        android:background="#005784"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginBottom="20dp"
        android:layout_alignRight="@id/button_cancel"
        android:layout_alignLeft="@id/textview_call"
        android:layout_below="@id/button_qqlogin"
        android:id="@+id/button_sinalogin"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:drawableLeft="@mipmap/ic_sina"
        android:textColor="#ffffff"
        android:text="用新浪微博账号登录"
        android:background="#aa0000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_alignRight="@id/button_cancel"
        android:layout_alignLeft="@id/textview_call"
        android:layout_below="@id/button_sinalogin"
        android:id="@+id/button_wechatlogin"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:drawableLeft="@mipmap/ic_qq"
        android:textColor="#ffffff"
        android:text="用微信账号登录"
        android:background="#7AA410"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
   </RelativeLayout>
</RelativeLayout>
