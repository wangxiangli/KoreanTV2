<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- corners 为view视图设置圆角效果 只有view视图为矩形时才有效果
       android:radius 表示圆角半径尺寸 
     -->
    <corners android:radius="5dp"/>
    <!-- stroke 描述view视图的边线 android:width 边线宽度 -->
    <stroke android:width="1dp" android:color="#E6E6E6"/>
    <!-- gradient 设置渐变颜色   android:angle 设置渐变角度  0表示颜色渐变从左向右  90 表示从下向上变化
        渐变角度必须是45的倍数
      android:startColor="#cccccc"  表示渐变的起始颜色
      android:endColor="#0000aa" 表示渐变的结束颜色-->
    <!--<gradient android:angle="90" android:startColor="#cccccc" android:endColor="#0000aa"/>-->
</shape>
